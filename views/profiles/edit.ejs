<% include ../partials/header%>

<div class="container">
    
    <div class="row">
        
    
        <h1 style="text-align:center;">Edit <%=profile.firstname %> <%=profile.lastname %></h1>
        <div style="width: 30%; margin:30px auto;">
        <form action="/profiles/<%= profile._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" name="firstname" value="<%=profile.firstname%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="lastname" value="<%=profile.lastname%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="file" name="profileImage" value="<%=profile.profileImage%>">
            </div>
             <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%=profile.description%>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/profiles">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer%>